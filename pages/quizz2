          <script type="text/javascript">
            const form = document.getElementById('form');
          
            form.addEventListener('submit', event => {
              event.preventDefault();
              submit()
            });
            function submit() {
              let form = document.forms.form;
              let formData = new FormData(form)
              let score = 0;
              if(formData.get('q1') == "1") score++
              if(formData.get('q2') == "4") score++
              if(formData.get('q3') == "1") score++
              if(formData.get('q4') == "2") score++
              if(formData.get('q5') == "1") score++
              if(formData.get('q6') == "3") score++
              if(formData.get('q7') == "4") score++
              if(formData.get('q8') == "2") score++
              if(formData.get('q9') == "3") score++
              if(formData.get('q10') == "1") score++
              if(formData.get('q11') == "3") score++
              if(formData.get('q12') == "3") score++
      
      
          
              alert("Vous avez accumuler : " + score + " points")
              
            }
          </script>
